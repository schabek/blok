<h1>Articles listing page</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3" >Actions</th>
    </tr>
  </thread>

  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to 'Show', article_path(a) %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
        <td><%= link_to 'Delete',article_path(a), method: :delete, data: { confirm: "Are you sure?" }%> </td>
      </tr>
    <% end %>
  </tbody>
</table>
    <p><%= link_to 'New', new_article_path %></p>
